<%= form_with url: new_user_path, id:"form2" do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email, id:"email" %><br><br>
  <%= form.label :first_name %>
  <%= form.text_field :first_name, id:"first_name" %><br><br>
  <%= form.label :last_name %>
  <%= form.text_field :last_name, id:"last_name" %><br><br>
  
  <button><%=link_to "Next", "/address", remote:true, id:"btn1"%></button>
<% end %>
<script>
	$("#btn1").click(function() {
		email = $("#email").val();
		first_name = $("#first_name").val();
		last_name = $("#last_name").val();
    $.ajax({
     method: 'get',
     url: "/address?email="+email+"&first_name="+first_name+"&last_name="+last_name,
     cache: false,
    });
    }
    );
</script>
