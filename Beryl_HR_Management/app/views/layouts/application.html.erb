<!DOCTYPE html>
<html>
  <head>
    <title>BerylHrManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application',media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
      <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
      <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
  </head>

  <body>
    <%= render partial: 'layouts/shared/header'%>
    
    <%= yield %>
    <% if employee_signed_in?%>
     <br>
     <center><button class="button"><%= link_to('Logout',destroy_employee_session_path, :method => :delete)%> </button></center>
    <% end %>
  </body>
</html>
