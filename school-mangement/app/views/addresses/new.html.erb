<%= form_with model: @address, url: "" ,:html => {:id => "add_address"} do|f| %>
<div class="container">
	<div class="col-sm-6 d-block m-auto">

		<div class="form-group">
		  <label>Country</label>
		  <%= f.text_field :country, class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>State</label>
		  <%= f.text_field :state, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>City</label>
		  <%= f.text_field :city, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>Locality</label>
		  <%= f.text_field :locality, class: "form-control" %>
		</div>
		<div class="form-group">
		<label>Street Number</label>
`		<%= f.text_field :street , class: "form-control"%>
		</div>
		<div class="form-group">
		<label>House</label>
		<%= f.text_field :house_no , class: "form-control"%>
		</div>
		<div class="form-group">
		  <label>Zip Code</label>
		  <%= f.text_field :zip_code, class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.submit "Submit", class: "btn btn-success btn-block my-4"%>
		</div>
	</div>
</div>
<% end %>