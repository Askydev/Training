<%= link_to "Home Page", "/home/index", class: "btn btn-info" %>
    <% if user_signed_in?%> 
    <%= link_to "Enter New Record", "/teachers/new" ,class: "btn btn-info"%>
     <h1 class="text-center text-white">All Record</h1>
    <table class="table table-dark table-hover" id="dttb" class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Class</th>
          <th>Roll No</th>
          <th>Marks</th>
          <th>Delete Record</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.first_name} #{user.last_name}","/#{user.id}" %> </td>
            <td><%=  user.st_class %></td>
            <td><%=  user.roll_no %></td>
            <td><%= link_to "Marks", "/#{user.id}/index"%></td>
            <td><%= link_to 'Delete',"/#{user.id}/index", method: :delete, data: {confirm: 'Are You Sure?'} %></td>
            <td><%= user.role.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     <% end %>