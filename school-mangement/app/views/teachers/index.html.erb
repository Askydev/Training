<%= link_to "Home Page", "/home/index" %><br>
    <% if user_signed_in?%> 
    <%= link_to "Enter New Record", "/teachers/new"%>
    <h1>All Record</h1>
    <table id="dttb" class="table table-hover">
      <thead>
        <tr>
         
          <th>Email</th>
          <th>Marks</th>
          <th>Delete Record</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email,"/#{user.id}" %></td><br>
            <td><%= link_to "Marks", "/#{user.id}/subjects/index"%><br></td>
            <td><%= link_to "Delete", "#"%></td>
            <td><%= user.role.name if present? %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     <% end %>