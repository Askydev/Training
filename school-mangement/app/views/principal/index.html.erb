<%= link_to "Home Page", "/home/index" %>
<% if user_signed_in?%> 
  <%= link_to "Enter New Record", "/principal/new"%>
  <h1>All Record</h1>
  <table id="dttp" class="table table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Delete Record</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email,"/#{user.id}" %></td><br>
          <td> <%= user.role.name if present? %><br></td>
          <td><br><%= link_to 'Delete',"/#{user.id}/principal/index", method: :delete, data: {confirm: 'Are You Sure?'} %><br><br></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>