


<%= form_with model: @user, url: "create_user" ,:html => {:id => "sign_up"} do|f| %>

<div class="container">
	<div class="col-sm-6 d-block m-auto">

		<div class="form-group">
		  <label>Email</label>
		  <%= f.text_field :email, class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>First Name</label>
		  <%= f.text_field :first_name, class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>Last Name</label>
		  <%= f.text_field :last_name, class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>Phone Number</label>
		  <%= f.text_field :phone_number, class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>Password</label>
		  <%= f.text_field :password, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>Confirm Password</label>
		  <%= f.text_field :confirm_password, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>Select Role</label>
		  <%= f.select :role_id, options_from_collection_for_select(Role.where(name: "Teacher"), :id, :name), {prompt: 'Select Role', required: true} , class: "form-control" %>
		</div>

		<div class="form-group">
		  <label>Select Gender</label>
		  
		  <%= f.select :gender_id, options_from_collection_for_select(Gender.all, :id, :name), {prompt: 'Select Gender', required: true} , class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.submit "Submit", class: "btn btn-success btn-block my-4"%>
		</div>
		
	</div>
	
</div>
<% end %>