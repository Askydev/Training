

<div class="container">

  <div class="row">
    <div class="col-sm-6 d-block m-auto">
        <h2 class="text-center" style="font-family: 'calibri';font-weight:900;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{id: 'login_form'}) do |f| %>
      <div class="field" class="input-group mb-3">
        <label> Email </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
      </div><br>

      <div class="field" class="input-group mb-3">
        <label> Password </label>
        <%= f.password_field :password, autocomplete: "current-password"  ,class: "form-control"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" class="form-control">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <div class="actions" >
        <%= f.submit "Log In" , class: "btn btn-success btn-block"%>
      </div>
    <% end %>

    </div>

      
    </div>
    
  </div>
  





