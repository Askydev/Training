<%= form_with model: @subject, url: "" ,:html => {:id => "new_marks"} do|f| %>
<div class="container">
	<div class="col-sm-6 d-block m-auto">
		<div class="form-group">
	    <label>Select Role</label>  		
	    <%= f.select :examtype_id, options_from_collection_for_select(Examtype.all, :id, :name), {prompt: 'Select Exam Type', required: true} , class: "form-control"%>
		</div>
		<div class="form-group">
		  <label>Hindi</label>
		  <%= f.text_field :hindi, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>English</label>
		  <%= f.text_field :english, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>Maths</label>
		  <%= f.text_field :maths, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>Science</label>
		  <%= f.text_field :science, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		<label>Social Science</label>
`		<%= f.text_field :sst , class: "form-control", value: 0%>
		</div>
		<div class="form-group">
		<label>Computer</label>
		<%= f.text_field :computer , class: "form-control", value: 0%>
		</div>
		<div class="form-group">
		  <label>General Knowledge</label>
		  <%= f.text_field :gk, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>P.T.</label>
		  <%= f.text_field :pt, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>Drawing</label>
		  <%= f.text_field :drawing, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <label>Sanskrit</label>
		  <%= f.text_field :sanskrit, class: "form-control", value: 0 %>
		</div>
		<div class="form-group">
		  <%= f.submit "Submit", class: "btn btn-success btn-block my-4"%>
		</div>
	</div>
</div>
<% end %>