<div>
	<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<%form_tag do %>
	<fieldset>
		<legend>
			Please log In
		</legend>
		<div>
			<%= label_tag :name,"Name"%>
			<%= text_field_tag :name,params[:name]%>
			<%= label_tag :password,"Password"%>
			<%= text_field_tag :password,params[:password]%>

		</div>>
	</fieldset>>
</div>