<% @books.each do |book| %>
	<tr>
		<td>
			<%= book.name %>
		</td>
		<td>
			<%= book.author %>
		</td>
		<td>
			<%= book.price %>
		</td>
		<td>
			<%= link_to 'Show', book_path(book) %>
		</td>
		<td>
			<%= link_to 'Edit', edit_book_path(book)%>
		</td>
		<td>
			<%= link_to 'Delete', book_path(book),method: :delete, data: {confirm: 'Are you sure you want to delete book'}%>
		</td>
	</tr>
<% end %>

